<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #2b2d30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.NewController">
    <HBox alignment="CENTER" prefHeight="200" spacing="10.0" style="-fx-background-color: #2b2d30;">
        <VBox prefHeight="-Infinity" prefWidth="400">
            <HBox alignment="CENTER" spacing="50.0">
                <Text fill="WHITE" text="Name:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Text>
                <TextField fx:id="input" prefWidth="250" style="-fx-background-color: #2b2d30; -fx-text-fill: white; -fx-border-color: #4e5157; -fx-border-radius: 5px;">

                </TextField>
            <padding>
               <Insets top="40.0" />
            </padding>
            </HBox>
            <HBox spacing="10.0">
                <Button fx:id="create" prefWidth="70" style="-fx-background-color: #3574f0; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px;" text="Create" />
                <Button fx:id="cancel" prefWidth="70" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #3574f0; -fx-border-radius: 5px;" text="Cancel" />
            <padding>
               <Insets left="230.0" top="40.0" />
            </padding>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
