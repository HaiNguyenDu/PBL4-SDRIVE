<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomePageController">
<VBox>
    <HBox alignment="CENTER" spacing="375">
        <Text fill="#373b3c" text="SDRIVE">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Text>
        <StackPane prefHeight="30" prefWidth="370">
            <Rectangle arcHeight="30.0" arcWidth="30.0" fill="WHITE" height="30.0" stroke="#f2eeee" width="370.0" />
            <HBox alignment="CENTER">

                <ImageView fx:id="searchIMG" fitHeight="20.0" preserveRatio="true">

                </ImageView>
                <TextField fx:id="searchField" prefWidth="250" promptText="Search" style="-fx-background-color: transparent;">

                </TextField>
                <ComboBox nodeOrientation="LEFT_TO_RIGHT" prefWidth="80" promptText="Files" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                  <cursor>
                     <Cursor fx:constant="OPEN_HAND" />
                  </cursor></ComboBox>
            </HBox>
        </StackPane>
        <StackPane>
            <Circle fill="WHITE" radius="15.0" stroke="BLACK" />
            <Text fx:id="nickName" text="DH" />
        </StackPane>
         <VBox.margin>
            <Insets left="20.0" top="10.0" />
         </VBox.margin>
    </HBox>
<!--body -->
    <HBox>
       <VBox>
            <StackPane>
                <Rectangle arcHeight="25.0" arcWidth="25.0" height="30" width="80.0">
                  <fill>
                     <LinearGradient endX="1.0" endY="1.0">
                        <stops>
                           <Stop>
                              <color>
                                 <Color red="0.1149488314986229" green="0.19836440682411194" blue="0.6710526347160339" />
                              </color>
                           </Stop>
                           <Stop offset="1.0">
                              <color>
                                 <Color red="0.6030701994895935" green="0.8153508901596069" blue="0.8684210777282715" />
                              </color>
                           </Stop>
                        </stops>
                     </LinearGradient>
                  </fill></Rectangle>
                <HBox alignment="CENTER" spacing="5.0">
                    <Text fill="WHITE" text="+">
                     <font>
                        <Font size="20.0" />
                     </font></Text>
                    <Text fx:id="addNew" fill="WHITE" text="Add new">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Text>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                </HBox>
            </StackPane>
           <Text fx:id="username">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="30.0" />
               </VBox.margin></Text>
            <VBox spacing="15.0">
                <HBox spacing="5.0">
                    <ImageView fx:id="ourIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text fx:id="generalButton" text="Chung">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Text>
                </HBox>
                <HBox spacing="5.0">
                    <ImageView fx:id="fileIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text fx:id="myItemButton" text="Tập tin của tôi" />
                </HBox>
                <HBox spacing="5.0">
                    <ImageView fx:id="bodyShareIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text fx:id="_shareButton" text="Đã chia sẻ" />
                </HBox>
                <HBox spacing="5.0">
                    <ImageView fx:id="sharedIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text fx:id="sharedButton" text="Được chia sẻ" />
                </HBox>
                <HBox spacing="5.0">
                    <ImageView fx:id="nearIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text fx:id="recentButton" text="Gần đây"/>
                  <Text fx:id="countMail" text="" style="-fx-fill: red;">
                   <font>
                     <Font name="System Bold" size="13.0" />
                   </font>
                  </Text>
                   
                </HBox>
                <HBox spacing="5.0">
                    <ImageView fx:id="trashIMG" fitHeight="15.0" preserveRatio="true" />
                    <Text text="Thùng rác" />
                </HBox>
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </VBox>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
       </VBox>
<!--        bodyright-->
       <VBox>
           <HBox spacing="20.0">
               <HBox fx:id="shareButton" alignment="CENTER" spacing="5.0">
                   <ImageView fx:id="shareIMG" fitHeight="15.0" preserveRatio="true" />
                   <Text text="Share">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Text>
               </HBox>
               <HBox fx:id="downloadButton" alignment="CENTER" spacing="5.0">
                   <ImageView fx:id="downloadIMG" fitHeight="20.0" preserveRatio="true" />
                   <Text text="Dowload">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Text>
               </HBox>
               <padding>
                  <Insets top="10.0" />
               </padding>

           </HBox>
           <HBox fx:id="pathViewHbox" maxWidth="900.0" prefWidth="900.0">
                <Text fx:id="pathText" text="Home &gt;">
                   <font>
                      <Font name="System Bold" size="12.0" />
                   </font>
                   <VBox.margin>
                      <Insets top="20.0" />
                   </VBox.margin>
                </Text>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
           </HBox>
           <StackPane>
                <Rectangle arcHeight="20.0" arcWidth="20.0" fill="WHITE" height="600" stroke="WHITE" width="950.0" />
                <VBox fx:id="viewVBox" fillWidth="false" style="-fx-background-color: white;">
                    <TableView fx:id="tableView"  visible="true" prefHeight="600" prefWidth="900" style="-fx-background-color: transparent; -fx-border-color: transparent; ">
                        <VBox.margin>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                        </VBox.margin>
                    </TableView>
                  <StackPane.margin>
                     <Insets />
                  </StackPane.margin>
                  <padding>
                     <Insets top="10.0" />
                  </padding>
                </VBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
           </StackPane>
            <HBox.margin>
               <Insets left="150.0" />
            </HBox.margin>
       </VBox>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
    </HBox>
</VBox>
</AnchorPane>
